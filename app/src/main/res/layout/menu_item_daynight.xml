<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/containerPadding"
    android:id="@+id/dn_menu_layout"
    android:orientation="vertical">

    <Switch
        android:id="@+id/dayNightSwitch"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="12dp"
        android:layout_gravity="center"
        android:switchPadding="2dp"
        android:splitTrack="false"
        android:showText="true"
        android:textOff="昼"
        android:textOn="夜"
        android:thumb="@drawable/daynight_thumb"
        android:track="@drawable/daynight_track" />
</LinearLayout>